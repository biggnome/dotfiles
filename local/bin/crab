#!/usr/bin/python

import time

crab = ["       ___     ___       ",         "     .i .-'   `-. i.     ",         "   .'   `/     \'  _`.   ",         "   |,-../ o   o \.' `|   ",         "(| |   /  _\ /_  \   | |)",         " \\\\\  (_.'.'\"`.`._)  ///",         "  \\\`._(..:   :..)_.'// ",         "   \`.__\ .:-:. /__.'/   ",         "    `-i-->.___.<--i-'    ",         "    .'.-'/.=^=.\`-.`.    ",         "   /.'  //     \\\  `.\  ",         "  ||   ||       ||   ||  ",         "  \)   ||       ||  (/   ",         "       \)       (/       ",         "  LIFE IS A CRAB ARRAY   "]

for i in crab:
    print("\033[91m {}\033[00m" .format(i))
    time.sleep(0.075)
